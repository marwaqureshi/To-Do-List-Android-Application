<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/taskImage"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/taskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/taskImage"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:text="TaskName" />

    <TextView
        android:id="@+id/taskDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/taskImage"
        android:layout_below="@id/taskName"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:text="TaskDesc"
        />

    <TextView
        android:id="@+id/taskDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/taskImage"
        android:layout_below="@id/taskDesc"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:text="TaskDate"
        />


    <TextView
        android:id="@+id/isComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/taskImage"
        android:layout_below="@id/taskDate"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:text="isComplete"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/isComplete"
        android:layout_marginTop="10dp"
        android:background="#777171"/>



</RelativeLayout>